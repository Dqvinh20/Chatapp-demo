<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<?import org.kordamp.ikonli.javafx.StackedFontIcon?>

<fx:root maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" stylesheets="@../../css/GlobalStyle.css" type="VBox" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <HBox fx:id="inputContainer" alignment="CENTER" focusTraversable="true">
            <children>
                <Label fx:id="beforeIcon">
                    <graphic>
                        <FontIcon iconSize="24" />
                    </graphic>
                    <HBox.margin>
                        <Insets left="8.0" />
                    </HBox.margin>
                </Label>
            <StackPane HBox.hgrow="ALWAYS">
               <children>
                  <TextField fx:id="showInput" alignment="CENTER" />
                  <PasswordField fx:id="hideInput" />
               </children>
               <HBox.margin>
                  <Insets left="8.0" right="8.0" />
               </HBox.margin>
            </StackPane>
                <Label fx:id="afterIcon">
                    <HBox.margin>
                        <Insets right="8.0" />
                    </HBox.margin>
               <graphic>
                  <StackedFontIcon />
               </graphic>
                </Label>

            </children>
        </HBox>
        <Label fx:id="errorText" styleClass="error-text">
            <VBox.margin>
                <Insets left="8" />
            </VBox.margin>
        </Label>
    </children>
</fx:root>
