<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<fx:root maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" stylesheets="@../../css/GlobalStyle.css" type="VBox" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox alignment="CENTER" focusTraversable="true">
         <children>
            <Label fx:id="beforeIcon">
               <graphic>
                  <FontIcon iconSize="24" />
               </graphic>
               <HBox.margin>
                  <Insets left="8.0" />
               </HBox.margin>
            </Label>

            <TextField fx:id="textInput" alignment="CENTER" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets left="8" right="8" />
               </HBox.margin>
            </TextField>
            <Label fx:id="afterIcon">
               <graphic>
                  <FontIcon iconSize="24" />
               </graphic>
               <HBox.margin>
                  <Insets right="8.0" />
               </HBox.margin>
            </Label>

         </children>
      </HBox>
      <Label fx:id="errorText" styleClass="error-text">
         <VBox.margin>
            <Insets left="8" />
         </VBox.margin>
      </Label>
   </children>
</fx:root>
