<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<fx:root fx:id="ConversationBox" maxWidth="1.7976931348623157E308" minWidth="76.0" type="HBox" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
   <children>

   </children>
   <children>
      <BorderPane fx:id="avatarContainer">
         <HBox.margin>
            <Insets right="10.0" />
         </HBox.margin>
      </BorderPane>
      <VBox alignment="CENTER_LEFT" maxHeight="1.7976931348623157E308" spacing="8.0" HBox.hgrow="ALWAYS">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="8.0">
               <children>
                  <Label fx:id="title" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" styleClass="primary_text" wrapText="true" HBox.hgrow="ALWAYS" />
                  <Label fx:id="time" alignment="CENTER_RIGHT" contentDisplay="RIGHT" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" styleClass="secondary_text">
                     <font>
                        <Font size="10.0" />
                     </font></Label>
               </children>
            </HBox>
            <Label fx:id="message" styleClass="secondary_text">
               <padding>
                  <Insets right="8.0" />
               </padding>
            </Label>
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <cursor>
      <Cursor fx:constant="HAND" />
   </cursor>
</fx:root>
